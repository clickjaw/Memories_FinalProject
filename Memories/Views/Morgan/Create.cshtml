@using Memories.Data.Enum
@using Memories.ViewModels

@model CreateFamilyMemberViewModel


@{
    ViewData["Title"] = "Create";
}



<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="ApplicationUserId" asp-for="ApplicationUserId" />
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="First Name">
        <span asp-validation-for="FirstName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Last Name">
        <span asp-validation-for="LastName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="MemberImage">Image</label>
        <input asp-for="MemberImage" type="file" class="form-control" />
        <img id="imgpreview" class="pt-2" />
        <span asp-validation-for="MemberImage" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="FamilyCategory">Family Name</label>
        <select asp-for="FamilyCategory" asp-items="@Html.GetEnumSelectList<FamilyCategory>()" class="form-control">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="MemberImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
    <script>$("#ImageUpload").change(function () {
            readURL(this);
        });
        CKEDITOR.replace('Description');</script>

}